let shortestDistance = function
    | [ p1; p2 ] ->
        ((max p1.x p2.x) - (min p1.x p2.x))
        + ((max p1.y p2.y) - (min p1.y p2.y))
    | _ -> raise (InvalidOperationException "Expected two points")

let sumShortestPath (input: Point array) =
    input
    |> List.ofArray
    |> List.comb 2
    |> Seq.map shortestDistance
    |> Seq.sum

sumShortestPath sampleExpanded

