let parseInput (input: string array) =
    let parseChar (y: int) (x: int) = function
    | '#' -> Some { x = x; y = y; }
    | _ -> None

    let parseRow (y: int) (row: char seq) =
        row
        |> Seq.mapi (parseChar y)
        |> Seq.choose id
    
    input
    |> Seq.mapi parseRow
    |> Seq.concat
    |> Array.ofSeq

let sampleInput =
    [|
        "...#......"
        ".......#.."
        "#........."
        ".........."
        "......#..."
        ".#........"
        ".........#"
        ".........."
        ".......#.."
        "#...#....."
    |]
    |> parseInput

sampleInput

